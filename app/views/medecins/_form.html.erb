<%= form_for @medecin, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :rdv, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :rdv, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :note, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :note, :class => 'text_field' %>
    </div>
  </div>
  <%= hidden_field :user_id, value: @user.try(:id) %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                medecins_path, :class => 'btn' %>
  </div>
<% end %>
