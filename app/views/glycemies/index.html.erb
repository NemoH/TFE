<%- model_class = Glycemy -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
     <!-- <th><%= model_class.human_attribute_name(:id) %></th>-->
      <th><%= model_class.human_attribute_name(:valeur) %></th>
      <th><%= model_class.human_attribute_name(:note) %></th>
      <!--<th><%= model_class.human_attribute_name(:user_id) %></th>-->
      <th><%= model_class.human_attribute_name(:date) %></th>
      
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
  
    <% @glycemies.each do |glycemy|  %>
      <tr>
        <!--<td><%= link_to glycemy.id, glycemy_path(glycemy) %></td>-->
        <td><%= glycemy.valeur %></td>
        <td><%= glycemy.note %></td>
        <!--<td><%= glycemy.user_id %></td>-->
        <td><%= glycemy.date %></td>
        
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_glycemy_path(glycemy), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      glycemy_path(glycemy),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to t('.new', :default => t("helpers.links.new")),
            new_glycemy_path,
            :class => 'btn btn-primary' %>


<h2> Import glycemies </h2>

<%= form_tag import_glycemies_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "Import" %>
<% end %>
